pipeline {
    agent any

    stages {
        stage('Deploy ansible playbook') {
            steps {
                withCredentials([string(credentialsId: 'hashipass', variable: 'PASS')]) {
                    ansiblePlaybook([
                        inventory: 'debian_hosts',
                        playbook: 'play.yml',
                        installation: 'ansible',
                        extraVars: [
                            hashipass: $PASS,
                        ]
                    ])
                }
            }
        }
    }
}
